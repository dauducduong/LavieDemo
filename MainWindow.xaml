<Window x:Class="LavieDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:webview2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:LavieDemo"
        mc:Ignorable="d"
        Title="Demo" Height="768" Width="1024"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Hàng 1 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <!-- Hàng 1: 3 cột -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="2" Margin="5 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="1.2*"/>
                </Grid.RowDefinitions>
                <!-- Nội dung các hàng -->
                <Border Grid.Row="0" Background="Gray">
                    <TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Status</TextBlock>
                </Border>
                <Grid Grid.Row="1">
                    <TextBlock x:Name="status_text" FontSize="65" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center" Background="LightGray"  FontWeight="SemiBold" Width="199" Margin="0,0,0,-1">...</TextBlock>
                </Grid>
            </Grid>
            <Border Grid.Column="0" Background="LightBlue">
                <Image Source="/Resources/aecom_logo3.png" Stretch="Uniform" Margin="10"/>
            </Border>
            <Border Grid.Column="1" Background="LightBlue">
                <TextBlock FontSize="48" FontWeight="SemiBold" Text="DEMO YOKOWO" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

        </Grid>

        <!-- Hàng 2: 2 cột -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="10*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border Background="LightGray">
                        <TextBlock FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" > Live View</TextBlock>
                    </Border>
                    <Border Grid.Column="1" Background="LightGray">
                        <Button x:Name="refreshButton" ToolTip="Reload Live View" Content="&#xf021;" FontFamily="FontAwesome" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" Click="refreshButton_Click" Width="74" Height="57"/>
                    </Border>
                </Grid>
                <Border Grid.Row="1" Background="LightGray">
                    <webview2:WebView2 x:Name="webView2" Source=""/>
                </Border>
            </Grid>


            <Grid Grid.Column="1" Margin="5 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="0.8*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="Gray" Margin="0 5 0 0">
                    <TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Data Monitor</TextBlock>
                </Border>
                <Border Grid.Row="1" Background="LightGray">
                </Border>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="LightGray">
                            <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0">TOTAL</TextBlock>
                        </Border>
                        <Border Grid.Row="1" Background="LimeGreen">
                            <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0">OK</TextBlock>
                        </Border>
                        <Border Grid.Row="2" Background="Red">
                            <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0">NG</TextBlock>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="LightGray">
                            <TextBlock x:Name="totalCountLabel" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20 0 0 0">0</TextBlock>
                        </Border>
                        <Border Grid.Row="1" Background="LimeGreen">
                            <TextBlock x:Name="okCountLabel" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20 0 0 0">0</TextBlock>
                        </Border>
                        <Border Grid.Row="2" Background="Red">
                            <TextBlock x:Name="ngCountLabel" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20 0 0 0">0</TextBlock>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="2">

                    </Grid>
                </Grid>
                <Border Grid.Row="2" Background="Gray"></Border>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Nhập mã cần kiểm tra</TextBlock>
                    </Grid>
                    <Grid Grid.Row="1">
                        <TextBox FontSize="30" x:Name="compare_text" HorizontalAlignment="Center" Width="200" Height="59" VerticalAlignment="Center" Padding="26 8 0 5"></TextBox>
                    </Grid>
                    <Grid Grid.Row="2">
                        <TextBlock FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Mã đọc được từ camera</TextBlock>
                    </Grid>
                    <Grid Grid.Row="3">
                        <TextBlock x:Name="ocr_text" FontSize="30" HorizontalAlignment="Center" Width="200" Height="59" VerticalAlignment="Center" Padding="26 8 0 5" Background="White"/>
                    </Grid>
                </Grid>
                <Border Grid.Row="3" Background="Gray" Margin="0 5 0 0">
                    <TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Control Panel</TextBlock>
                </Border>
                <Border Grid.Row="4" Background="LightGray">
                    <TextBox x:Name="textbox" TextWrapping="Wrap" Text="TextBox"/>
                </Border>
                <Grid Grid.Row="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="LightGray">
                                <Button x:Name="button_start" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="80" Cursor="Hand" IsEnabled="False" Click="button_start_Click">START</Button>
                            </Border>
                            <Border Grid.Column="1" Background="LightGray">
                                <Button x:Name="button_stop" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="80" Cursor="Hand" IsEnabled="False" Click="button_stop_Click">STOP</Button>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="LightGray">
                                <Button x:Name="button_reset" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="80" Cursor="Hand" Click="button_reset_Click">RESET</Button>
                            </Border>
                            <Border Grid.Column="1" Background="LightGray">
                                <Button x:Name="button_setting" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="80" Cursor="Hand" Click="button_setting_Click">SETTING</Button>
                            </Border>
                        </Grid>
                        <Border Grid.Row="2" Background="LightGray"></Border>
                        <Border Grid.Row="3" Background="LightGray">
                            <Button x:Name="button_exit" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="90" Margin="0,0,20,0" Cursor="Hand" Click="button_exit_Click">EXIT</Button>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
