<Window x:Class="LavieDemo.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LavieDemo"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <Label Content="Username:" FontSize="14" Margin="0,0,0,10"/>
        <TextBox x:Name="UsernameTextBox" Height="30" FontSize="14"/>
        <Label Content="Password:" FontSize="14" Margin="0,10,0,10"/>
        <PasswordBox x:Name="PasswordBox" Height="30" FontSize="14"/>
        <Button x:Name="button_login" Content="Log in" Click="button_login_Click" Margin="0,20,0,0" Height="40" FontSize="14"/>
    </StackPanel>
</Window>
